<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.berkeley.ispe.Kickaroo_Main"
    tools:showIn="@layout/app_bar_kickaroo__main"
    android:background="#B2CAE4">


    <TextView
        android:id="@+id/leftQuote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="“"
        android:textColor="#000000"
        android:textSize="100sp"
        app:layout_constraintTop_toBottomOf="@+id/startButton"
        app:layout_constraintLeft_toRightOf="@id/baby"
        app:layout_constraintRight_toLeftOf="@id/ComingOut" />

    <TextView
        android:id="@+id/Kickaroo"
        android:layout_width="188dp"
        android:layout_height="64dp"
        android:text="Kickaroo"
        android:textColor="#000000"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.035" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/roundbutton_pink"
        android:fontFamily="cursive"
        android:text="Start"
        android:textSize="72sp"
        app:layout_constraintTop_toBottomOf="@+id/Kickaroo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/ComingOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coming Out In"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/startButton"
        app:layout_constraintBottom_toTopOf="@+id/dateNumbers"
        app:layout_constraintLeft_toRightOf="@+id/leftQuote"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20sp"/>

    <TextView
        android:id="@+id/dateNumbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2   07  03"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/ComingOut"
        app:layout_constraintLeft_toRightOf="@+id/leftQuote"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rightQuote"
        android:layout_marginRight="20sp"/>

    <TextView
        android:id="@+id/dateString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="months  weeks    days"
        android:textColor="#000000"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="450dp"
        app:layout_constraintTop_toBottomOf="@+id/dateNumbers"
        app:layout_constraintLeft_toRightOf="@+id/leftQuote"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rightQuote"
        android:layout_marginRight="20sp"/>


    <TextView
        android:id="@+id/rightQuote"
        android:layout_width="wrap_content"
        android:layout_height="80sp"
        android:fontFamily="serif"
        android:text="”"
        android:textColor="#000000"
        android:textSize="100sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/baby"
        android:layout_width="66dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/ic_baby_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="120sp"
        android:layout_marginLeft="50sp"/>

</android.support.constraint.ConstraintLayout>
